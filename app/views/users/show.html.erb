<div class="container">
  <div class="row">  
    <h2>ユーザー詳細</h2>
  </div>
  
  <div class="row">
    <h4><%= @user.name %>がフォロー中</h4>
      <% @user.followed_users.each do |user| %>
      <div class="col-md-2 col-sm-4 col-xs-6 ">
        <%= render 'detail_form', user: user %>
      </div>
      <% end %>
  </div>
    
  <div class="row">
    <h4><%= @user.name %>のフォロワー</h4>
      <% @user.followers.each do |user| %>
      <div class="col-md-2 col-sm-4 col-xs-6 ">
        <%= render 'detail_form', user: user %>
      </div>
      <% end %>
  </div>
  
  <div class="row">
    <h4><%= @user.name %>とのメッセージ</h4>
    <div class="item">
      <%= link_to user.name, user %>との
      <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
    </div>
  </div>
  
  <%= link_to '戻る', :back %>
</div>